<%- include('partials/header') -%>
    <h1 class="text-4xl mb-4">Settings for <%= settings.name %></h1>

    <div>
        <h2 class="text-2xl my-2">Avatar</h2>
        <form action="avatar/update" method="post" id="form_update">
            <input type="hidden" name="user_id" value=<%= settings.user_id %>>
            <div>
                <label class="my-4" for="avatar_url">URL:</label>
                <input class="bg-slate-200 my-4" type="url" name="avatar_url" required>
            </div>
        </form>
        <form action="avatar/delete" method="post" id="form_delete">
            <input type="hidden" name="user_id" value=<%= settings.user_id %>>
        </form>
        <div>
            <button form="form_update" type="submit" class="rounded-full w-32 bg-blue-100 min-w-fit m-auto"><b>Submit</b></button>
            <button form="form_delete" type="submit" class="rounded-full w-32 bg-red-100 min-w-fit m-auto"><b>Delete</b></button>
        </div>
    </div>
<%- include('partials/footer') -%>